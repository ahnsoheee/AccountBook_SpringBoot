<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="accountbook.mapper.UserMapper">

    <insert id="insertUser" parameterType="accountbook.vo.UserVO">
        INSERT INTO user(id, pw, name) VALUES(#{id}, #{pw}, #{name})
    </insert>

    <select id="findById" resultType="accountbook.vo.UserVO" parameterType="String">
        SELECT id, name from user WHERE id = #{id}
    </select>

    <delete id="deleteUser" parameterType="String">
        DELETE FROM user WHERE id = #{id}
    </delete>
</mapper>